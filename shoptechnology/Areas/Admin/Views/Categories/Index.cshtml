@model IEnumerable<ShopTechnologyAccessories.Models.Category>
@{
    ViewData["Title"] = "Danh mục";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Danh mục</h3>
    <a class="btn btn-primary" href="@Url.Action("Create")">Thêm danh mục</a>
</div>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Tên</th><th></th></tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td>@c.CategoryId</td>
                <td>@c.CategoryName</td>
                <td>
                    <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("Edit", new { id = c.CategoryId })">Sửa</a>
                    <form method="post" action="@Url.Action("Delete")" class="d-inline" onsubmit="return confirm('Xóa danh mục?')">
                        <input type="hidden" name="id" value="@c.CategoryId" />
                        <button class="btn btn-sm btn-outline-danger">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


