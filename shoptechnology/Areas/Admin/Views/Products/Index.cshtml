@model IEnumerable<ShopTechnologyAccessories.Models.Product>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">Danh sách sản phẩm</h6>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i> Thêm mới sản phẩm
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["ToastMessage"] != null)
            {
                <div class="alert alert-@((TempData["ToastType"] ?? "success").ToString()?.ToLower()) alert-dismissible fade show" role="alert">
                    @TempData["ToastMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th class="text-end">Giá (VNĐ)</th>
                            <th class="text-center">Tồn kho</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.ProductId</td>
                                <td>
                                    <strong>@p.ProductName</strong>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@p.Category.CategoryName</span>
                                </td>
                                <td class="text-end">@p.Price.ToString("N0") ₫</td>
                                <td class="text-center">
                                    <span class="badge @(p.StockQuantity > 5 ? "bg-success" : (p.StockQuantity > 0 ? "bg-warning" : "bg-danger"))">
                                        @p.StockQuantity
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@p.ProductId" class="btn btn-sm btn-outline-primary" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@p.ProductId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này không?');">
                                            <input type="hidden" name="id" value="@p.ProductId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTables for enhanced functionality
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Vietnamese.json"
                },
                "pageLength": 10,
                "lengthMenu": [10, 25, 50, 100]
            });
        });
    </script>
}