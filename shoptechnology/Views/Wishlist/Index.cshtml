@model IEnumerable<ShopTechnologyAccessories.Models.Wishlist>

@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<div class="container mt-5">
    <h2 class="mb-4">Danh sách yêu thích của bạn</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Danh sách yêu thích của bạn đang trống.
        </div>
        <p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Tiếp tục mua sắm</a>
        </p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @{
                            var img = item.Product.ProductImages.FirstOrDefault(i => i.IsMain)?.ImageUrl ??
                            item.Product.ProductImages.FirstOrDefault()?.ImageUrl ?? "/favicon.ico";
                        }
                        <img src="@img" class="card-img-top" alt="@item.Product.ProductName"
                            style="height: 200px; object-fit: contain; padding: 10px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Product.ProductName</h5>
                            <p class="card-text text-muted">@item.Product.Price.ToString("N0") đ</p>
                            <div class="mt-auto">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId"
                                    class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                <form asp-action="RemoveFromWishlist" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Xóa</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
