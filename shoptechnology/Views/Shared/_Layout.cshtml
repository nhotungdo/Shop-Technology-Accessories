@using System.Security.Claims
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop Technology Accessories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>
    <style>
        .navbar-brand {
            font-weight: 700;
        }
        .brand-dot {
            width: 10px;
            height: 10px;
            background-color: #007bff;
            border-radius: 50%;
        }
        .footer-icon {
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" href="@Url.Action("Index", "Home")">
                    <span class="brand-dot"></span>
                    Tech Accessories
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample"
                    aria-controls="navbarsExample" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarsExample">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Products")">Sản phẩm</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Cart")">Giỏ hàng</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminMenu" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                                <ul class="dropdown-menu" aria-labelledby="adminMenu">
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">Dashboard</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Index", "Products", new { area = "Admin" })">Sản phẩm</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Index", "Categories", new { area = "Admin" })">Danh mục</a>
                                    </li>
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Index", "Orders", new { area = "Admin" })">Đơn hàng</a></li>
                                    <li><a class="dropdown-item"
                                            href="@Url.Action("Index", "Users", new { area = "Admin" })">Người dùng</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item"><span class="navbar-text me-2">Xin chào, @User.Identity!.Name</span></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Orders")">Đơn hàng</a></li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Logout", "Account")">Đăng xuất</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Login", "Account")">Đăng nhập</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="@Url.Action("Register", "Account")">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container mt-4">
        @if (TempData["ToastMessage"] != null)
        {
            <script>
                (function () {
                    var msg = '@TempData["ToastMessage"]';
                    var type = '@TempData["ToastType"]' || 'success';
                    if (window.AppToast) {
                        window.AppToast.show(msg, type);
                    } else {
                        window.addEventListener('load', function () {
                            if (window.AppToast) window.AppToast.show(msg, type);
                        });
                    }
                })();
            </script>
        }
        @RenderBody()
    </main>
    <footer class="site-footer">
        <div class="container py-5">
            <div class="row g-4">
                <div class="col-lg-6">
                    <div class="d-flex align-items-center mb-3">
                        <span class="brand-dot me-2"></span>
                        <strong>Tech Accessories</strong>
                    </div>
                    <div class="footer-item d-flex align-items-start gap-3 mb-3">
                        <span class="footer-icon"><i class="bi bi-geo-alt-fill"></i></span>
                        <div>
                            <div>21 Revolution Street</div>
                            <div class="footer-sub">Hà Nội, Việt Nam</div>
                        </div>
                    </div>
                    <div class="footer-item d-flex align-items-center gap-3 mb-3">
                        <span class="footer-icon"><i class="bi bi-telephone-fill"></i></span>
                        <div>0931 982 568</div>
                    </div>
                    <div class="footer-item d-flex align-items-center gap-3">
                        <span class="footer-icon"><i class="bi bi-envelope-fill"></i></span>
                        <a class="footer-link"
                            href="mailto:support@techaccessories.local">support@techaccessories.local</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <h6 class="mb-3 text-white">Về chúng tôi</h6>
                    <p class="footer-sub mb-4">Cửa hàng phụ kiện công nghệ cung cấp tai nghe, sạc nhanh, ốp lưng, chuột,
                        bàn phím và nhiều phụ kiện chính hãng với giá tốt.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-outline-light btn-sm rounded-3 footer-social" href="#"
                            aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                        <a class="btn btn-outline-light btn-sm rounded-3 footer-social" href="#" aria-label="Twitter"><i
                                class="bi bi-twitter"></i></a>
                        <a class="btn btn-outline-light btn-sm rounded-3 footer-social" href="#"
                            aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                        <a class="btn btn-outline-light btn-sm rounded-3 footer-social" href="#" aria-label="GitHub"><i
                                class="bi bi-github"></i></a>
                    </div>
                </div>
            </div>
            <div class="text-center footer-sub mt-4">© @DateTime.Now.Year Tech Accessories</div>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>

</html>
