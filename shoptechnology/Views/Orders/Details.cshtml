@model ShopTechnologyAccessories.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}
<h3>Đơn hàng @Model.OrderId</h3>
<p>Ngày đặt: @Model.OrderDate</p>
<p>Trạng thái: @Model.Status</p>
<p>Địa chỉ: @Model.ShippingAddress</p>

<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>SL</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.OrderDetails)
        {
            <tr>
                <td>@d.Product.ProductName</td>
                <td>@d.Quantity</td>
                <td>@d.Price.ToString("N0") đ</td>
                <td>@(d.Price * d.Quantity).ToString("N0") đ</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Tổng</th>
            <th>@Model.TotalAmount.ToString("N0") đ</th>
        </tr>
    </tfoot>
</table>


