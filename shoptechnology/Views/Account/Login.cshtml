@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-hero" style="background-image:url('@Url.Content("~/img/best-tech-accessories.jpg")');"></div>
<div class="login-modal container">
    <div class="login-card mx-auto">
        <div class="text-center mb-3">
            <div class="avatar-placeholder mx-auto"></div>
            <h4 class="mt-2 mb-1">Log in</h4>
            <div class="small text-muted">Don’t have an account? <a href="@Url.Action("Register","Account")">Sign up</a>
            </div>
        </div>
        <div class="d-grid gap-3 mb-3">
            <button type="button" class="btn btn-outline-secondary rounded-pill py-2 social-btn">
                <span>Log in with Facebook</span>
            </button>
            <button type="button" class="btn btn-outline-secondary rounded-pill py-2 social-btn">
                <span>Log in with Google</span>
            </button>
        </div>
        <div class="divider"><span>OR</span></div>
        <form method="post" novalidate>
            <div class="mb-3">
                <label class="form-label small text-muted">Your email</label>
                <input name="email" type="email" class="form-control form-control-lg rounded-pill" required />
            </div>
            <div class="mb-2">
                <label class="form-label small text-muted">Your password</label>
                <div class="position-relative">
                    <input id="password" name="password" type="password"
                        class="form-control form-control-lg rounded-pill pe-5" required />
                    <button type="button"
                        class="btn btn-sm btn-link position-absolute top-50 end-0 translate-middle-y me-2 toggle-pass">Hide</button>
                </div>
            </div>
            <div class="text-end mb-3">
                <a href="#" class="text-muted small">Forget your password</a>
            </div>
            <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
            <button class="btn btn-lg w-100 rounded-pill py-3 login-btn" type="submit">Log in</button>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .login-hero {
            position: fixed;
            inset: 0;
            background-size: cover;
            background-position: center;
            filter: blur(2px);
            transform: scale(1.02);
        }

        .login-modal {
            position: relative;
            z-index: 1;
            padding-top: 80px;
            padding-bottom: 80px;
        }

        .login-card {
            max-width: 560px;
            background: #fff;
            border-radius: 24px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, .2);
            padding: 32px;
        }

        .avatar-placeholder {
            width: 48px;
            height: 48px;
            border-radius: 999px;
            background: #e5e7eb;
        }

        .divider {
            display: flex;
            align-items: center;
            gap: 16px;
            margin: 16px 0;
        }

        .divider::before,
        .divider::after {
            content: "";
            height: 1px;
            background: #e5e7eb;
            flex: 1;
        }

        .divider span {
            color: #9ca3af;
            font-weight: 600;
        }

        .social-btn {
            border-color: #d1d5db;
        }

        .login-btn {
            background: #d1d5db;
            border: 0;
            color: #111827
        }

        .login-btn:hover {
            background: #c9ced6;
            color: #111827
        }

        .recent-card {
            width: 180px;
            background: #fff;
            border: 1px solid #e5e7eb;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 16px rgba(0, 0, 0, .04)
        }

        .recent-card .recent-photo {
            height: 140px;
            background: #e5e7eb;
            background-size: cover;
            background-position: center
        }

        .recent-card .recent-name {
            padding: .75rem
        }

        .recent-card.add-card .recent-photo {
            font-size: 40px;
            color: #6b7280
        }
    </style>
}

@section Scripts {
    <script>
        (function () {
            const btn = document.querySelector('.toggle-pass');
            const input = document.getElementById('password');
            if (btn && input) {
                btn.addEventListener('click', function () {
                    const isPw = input.type === 'password';
                    input.type = isPw ? 'text' : 'password';
                    btn.textContent = isPw ? 'Hide' : 'Show';
                });
            }
        })();
    </script>
}
